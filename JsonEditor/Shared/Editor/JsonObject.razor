@using Newtonsoft.Json.Linq
@inherits JsonObjectBase

<table>
	@foreach (var property in JsonObject.Properties()) {
		<tr @key="property.Name">
			<td>@property.Name</td>
			<td>
				<JsonValue
					JsonValue="@property.Value"
					OnChange="(e) => OnChangeProperty(property.Name, e)"
					Name="@property.Name"
					Errors="@Errors"
				/>
			</td>
		</tr>
	}
</table>