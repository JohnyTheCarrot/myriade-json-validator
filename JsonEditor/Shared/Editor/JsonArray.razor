@inherits JsonArrayBase
@using Newtonsoft.Json.Linq
@using JsonEditor.Shared.Generic

<table>
	@foreach (var i in Enumerable.Range(0, JsonArray.Count)) {
		<tr @key="i">
			<td>[@i]</td>
			<td>
				<JsonValue
					JsonValue="@JsonArray[i]"
					OnChange="(e) => { OnChangeProperty(i, e); }"
					Name="@($"[{i}]")"
					Errors="@Errors"
				/>
			</td>
		</tr>
	}
</table>